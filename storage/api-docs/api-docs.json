                    {
                        "$ref": "#/components/schemas/BaseRequest"
                    },
                    {
                        "properties": {
                            "name": {
                                "title": "Item name",
                                "description": "Name of the item",
                                "example": "a nice item"
                            }
                        }
                    }
                ]
            },
            "UpdateItemRequest": {
                "title": "UpdateItemRequest",
                "description": "Update Item request body data",
